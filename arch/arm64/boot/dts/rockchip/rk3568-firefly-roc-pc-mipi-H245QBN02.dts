    status = "okay";
};

&dsi1_in_vp0 {
    status = "disabled";
};

&dsi1_in_vp1 {
    status = "okay";
};

/*
 * mipi_dphy1 needs to be enabled
 * when dsi1 is enabled
 */
&dsi1 {
    status = "okay";
    //rockchip,lane-rate = <1000>;
    dsi1_panel: panel@0 {
        status = "okay";
        compatible = "simple-panel-dsi";
        reg = <0>;
        backlight = <&backlight1>;

        enable-gpios = <&gpio0 RK_PC5 GPIO_ACTIVE_HIGH>;
	    reset-gpios = <&gpio3 RK_PB6 GPIO_ACTIVE_LOW>;

        enable-delay-ms = <35>;
        prepare-delay-ms = <6>;
        reset-delay-ms = <25>;
        init-delay-ms = <55>;
        unprepare-delay-ms = <0>;
        disable-delay-ms = <20>;
        mipi-data-delay-ms = <200>;
        size,width = <120>;
        size,height = <170>;
        dsi,flags = <(MIPI_DSI_MODE_LPM | MIPI_DSI_MODE_EOT_PACKET)>;
        dsi,format = <MIPI_DSI_FMT_RGB888>;
        dsi,lanes  = <1>;

        panel-init-sequence = [
            05 64 01 11
            39 00 05 2A 00 00 00 EF
            39 00 05 2B 00 00 01 AF
            15 00 02 35 00
            05 00 01 11
            05 C8 01 29
            39 00 03 BD 11 00
            39 00 03 BC 00 94
            39 00 03 BE 00 02
            05 00 01 2C
        ];

        panel-exit-sequence = [
            05 00 01 28
            05 00 01 10
        ];

        disp_timings1: display-timings {
            native-mode = <&dsi1_timing0>;
            dsi1_timing0: timing0 {
                clock-frequency = <9600000>;
                hactive = <240>;
                vactive = <432>;
                hsync-len = <2>;
                hback-porch = <52>;
                hfront-porch = <50>;
                vsync-len = <2>;
                vback-porch = <16>;
                vfront-porch = <14>;
                hsync-active = <0>;
                vsync-active = <0>;
                de-active = <0>;
                pixelclk-active = <0>;
            };
        };

        ports {
            #address-cells = <1>;
            #size-cells = <0>;

            port@0 {
                reg = <0>;
                panel_in_dsi1: endpoint {
                    remote-endpoint = <&dsi1_out_panel>;
                };
            };
        };
	};

    ports {
        #address-cells = <1>;
        #size-cells = <0>;

        port@1 {
            reg = <1>;
            dsi1_out_panel: endpoint {
            remote-endpoint = <&panel_in_dsi1>;
            };
        };
	};
};

